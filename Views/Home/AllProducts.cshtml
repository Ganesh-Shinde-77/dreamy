                    <div class="col-md-3">
                        <div class="card card-body">
                            <div class="media align-items-center align-items-lg-start text-center text-lg-left flex-column flex-lg-row">
                                <div class="mr-2 mb-3 mb-lg-0">

                                    @{
                                        string viewProductLink = "/home/displayproduct?tableName=furniturerow1&productNo=" + items.productNo;

                                        string imageLink = "/images/" + items.productName.ToUpper() + ".png";
                                    }

                                    <a href=@viewProductLink> <img src=@imageLink style="border-radius:20px" width="150" height="150" alt=""> </a>
                                </div>

                                <div class="media-body">
                                    <h5 class="media-title font-weight-semibold">

                                        @{
                                            var pdtName = @items.productName;
                                        }
                                        @{
                                            pdtName = string.Concat(pdtName.Select(x => Char.IsUpper(x) ? " " + x : x.ToString())).TrimStart(' '); //to add a space before each first capital letter and then making all the letters as capital
                                            string upperPdtName = pdtName.ToUpper();
                                        }

                                        <a href=@viewProductLink data-abc="true">@upperPdtName</a>
                                    </h5>
                                    <p class="mb-3" style="text-align: justify;"> @items.description </p>
                                </div>

                                <div class="mt-3 mt-lg-0 ml-lg-3 text-center">
                                    <h3 class="mb-0 font-weight-semibold">₹ @items.price</h3>
                                    <div>
                                        @for (int i = 0; i < items.stars; i++)
                                        {

                                            <i class="fa fa-star"></i>
                                        }

                                    </div>

                                    <div class="text-muted">@items.reviewCount reviews</div>

                                    <a href=@viewProductLink class="btn btn-warning btn-lg mt-4 text-black">View Product<span>  <svg style="width:15px;height:15px;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M320 0c-17.7 0-32 14.3-32 32s14.3 32 32 32h82.7L201.4 265.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L448 109.3V192c0 17.7 14.3 32 32 32s32-14.3 32-32V32c0-17.7-14.3-32-32-32H320zM80 32C35.8 32 0 67.8 0 112V432c0 44.2 35.8 80 80 80H400c44.2 0 80-35.8 80-80V320c0-17.7-14.3-32-32-32s-32 14.3-32 32V432c0 8.8-7.2 16-16 16H80c-8.8 0-16-7.2-16-16V112c0-8.8 7.2-16 16-16H192c17.7 0 32-14.3 32-32s-14.3-32-32-32H80z" /></svg> </span> </a>

